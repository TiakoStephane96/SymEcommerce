{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
<div style="height: 100px;">
</div>

<div class="mx-4">
    <h1 style="text-align:center" class="mt-5">Categories</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nameCategorie }}</td>
                <td>
                    <img style="width:10%" src="{{ vich_uploader_asset(category, 'image')}}" class="w-20 rounded-circle"/>
                </td>
                <td>
                    <a class="me-4" href="{{ path('app_admin_categories_show', {'id': category.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_admin_categories_edit', {'id': category.id}) }}"><i class="fa fa-edit" style="font-size:24px"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

