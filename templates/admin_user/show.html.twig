</svg> back</a>

    <a class="btn btn-success me-5" href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><i class="fa fa-edit" style="font-size:24px"></i> edit</a>

    {{ include('admin_user/_delete_form.html.twig') }}
</div>
</div>
   
{% endblock %}
