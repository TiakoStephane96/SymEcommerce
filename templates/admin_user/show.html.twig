{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div style="height: 100px;">
</div>

<div class="container">
 <h1 class="mt-5 mb-5" style="text-align:center">User</h1>

    <table class="table ">
        <tbody class="table-danger ">
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

<div class="d-flex mt-5 justify-content-center">

    <a class="btn btn-primary me-5" href="{{ path('app_admin_user_index') }}"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left-square-fill pb-1" viewBox="0 0 16 16">
