{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
<div style="height: 100px;">
</div>

 <div class="mx-4 mt-5">
 <h1 style="text-align:center">Products</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.nameProduct }}</td>
                <td>{{ product.price }} F</td>
                <td><img class="rounded-circle" src="{{ vich_uploader_asset(product, 'image')}}" alt={{ product.nameProduct }} style="width:20%"/></td>
                <td>{{ product.category }}</td>
                <td>
                    <a class="me-4" href="{{ path('app_admin_products_show', {'id': product.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_admin_products_edit', {'id': product.id}) }}"><i class="fa fa-edit" style="font-size:24px"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success mx-2"  href="{{ path('app_admin_products_new') }}"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-square pb-1" viewBox="0 0 16 16">
